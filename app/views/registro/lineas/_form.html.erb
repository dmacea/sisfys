  
 

<%= form_for(@registro_linea, html: {class:'form-horizontal', role:'form',id:"formulario"}) do |f| %>
  <% if @registro_linea.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <ul>
        <% @registro_linea.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group form-group-sm">
    <%= f.label :serial, class:"col-md-1 control-label" %>
    <div class="col-md-3">
       <%= f.text_field :serial, class: "form-control input-sm",required: "required",maxlength:"50"  %>
    </div>
    
    <%= f.label :codigoPin, class:"col-md-1 control-label" %>
    <div class="col-md-3">
       <%= f.text_field :codigoPin, class: "form-control input-sm",required: "required",maxlength:"50"  %>
    </div>
        
    <%= f.label :codigoPunk, class:"col-md-1 control-label" %>
    <div class="col-md-3">
       <%= f.text_field :codigoPunk, class: "form-control input-sm",required: "required",maxlength:"50"  %>
    </div>
  </div>

  <div class="form-group form-group-sm">     
    <%= f.label :numero, class:"col-md-1 control-label" %>
    <div class="col-md-3">
      <%= f.text_field :numero, class: "form-control input-sm",required: "required",maxlength:"25"  %>
    </div>
    <%= f.label :diaCorte, class:"col-md-1 control-label" %>
    <div class="col-md-3">
       <%= f.number_field :diaCorte, class: "form-control input-sm",required: "required",maxlength:"25"  %>
    </div>
    <%=f.label :operadora,class:"col-md-1 control-label  " %>
    <div class="col-md-3">
      <%= f.select :operadora_id,opciones_operadoras(@registro_linea.operadora), {}, {class: "form-control input-sm",required: "required" } %>
    </div>
  </div>

  <div class="form-group form-group-sm">   

    <%=f.label :plan,class:"col-md-1 control-label " %>
    <div class="col-md-3">
    <% operadora = @registro_linea.operadora unless @registro_linea.plan.nil? %>
      <%= f.select :plan_id,opciones_planes(@registro_linea.plan,operadora), {}, {class: "form-control input-sm",required: "required" } %>
    </div>
  
  </div>
    

  <div class="form-group form-group-sm">
    <div class="col-md-1 col-md-offset-7" align="right">
      <%= submit_tag "Guardar" , class: "btn btn-primary btn-sm"  %>
    </div>
  </div>
<% end %>

 

